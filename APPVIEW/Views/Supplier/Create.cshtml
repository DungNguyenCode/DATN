@model APPDATA.Models.Supplier

@{
    ViewData["Title"] = "Create-Supplier";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h4 class="py-3 mb-4"><span class="text-muted fw-light">Forms /</span> Basic Inputs</h4>
<div class="row">
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Create a Supplier</h5>

            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="row mb-3">
                        <label asp-for="Name" class="col-sm-2 col-form-label">Name Supplier</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="Name" placeholder="Enter name of Supplier" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Suppliercode" class="col-sm-2 col-form-label">Code</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="Suppliercode" placeholder="Enter code of Supplier" />
                            <span asp-validation-for="Suppliercode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="PhoneNumber" class="col-sm-2 col-form-label">Phone number</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Enter phone of Supplier" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Address" class="col-sm-2 col-form-label">Address</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="Address" placeholder="Enter address of Supplier" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Desciption" class="col-sm-2 col-form-label">Desciption</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="Desciption" placeholder="Enter address of Supplier" />
                            <span asp-validation-for="Desciption" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">
                                <span class="mdi mdi-check-outline"></span> Submit
                            </button>
                            <div class="btn-group ms-2">
                                <a href="#" class="btn btn-danger waves-effect waves-light" onclick="goBack()">
                                    <span class="mdi mdi-close"></span> Cancel
                                </a>
                                <script>
                                    function goBack() {
                                        window.history.back();
                                    }
                                </script>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

