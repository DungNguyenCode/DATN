                                        {
                                            <option value="@item.ProvinceID">@item.ProvinceName</option>


                                        }

                                    </select>
                                    <input type="hidden" name="province2" value="" />
                                </div>
                                <div class="col-lg-4">

                                    <input list="districtSelect" id="district" name="district" placeholder="Chọn quận huyện">
